<idea-plugin version="2">
    <id>com.thomas.checkMate</id>
    <name>CheckMate</name>
    <version>1.0</version>
    <vendor email="goristhomas@hotmail.com">Thomas Goris</vendor>

    <description><![CDATA[
      Discover uncaught unchecked exceptions for one or more selected statements.<br>
      Generate or update a try catch statement based on the exceptions you selected.<br>
      Inspect responsible methods and corresponding throw statements.
    ]]></description>

    <change-notes><![CDATA[
      Initial release.
    ]]>
    </change-notes>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action id="findUncheckedExceptions" class="com.thomas.checkMate.FindAction" text="Find Unchecked Exceptions"
                description="Used to discover uncaught unchecked exceptions and add/update a try catch statement based on the selected exceptions">
            <keyboard-shortcut keymap="$default" first-keystroke="alt U"/>
        </action>
    </actions>
</idea-plugin>